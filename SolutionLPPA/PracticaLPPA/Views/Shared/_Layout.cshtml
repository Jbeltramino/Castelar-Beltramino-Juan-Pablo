<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Content/css/styles.css")
    @Scripts.Render("~/bundles/modernizr")
    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</head>
<body>

    <header id="header">
        <div class="center">
            <div id="logo">
                <a href="@Url.Action("index", "Home")" title="Home">
                    <img src="~/Content/Images/logo.png" />
                </a>
            </div>

            <nav id="menu">
                <ul>
                    <li>
                        @Html.ActionLink("EjerciciosHTML", "index", "EjerciciosHTML", new { area = "" }, new { @class = "nav-item" })
                    </li>
                    <li>
                        @Html.ActionLink("EjerciciosCSS", "index", "EjerciciosCSS", new { area = "" }, new { @class = "nav-item" })
                    </li>
                </ul>
                <span class="nav-indicator"></span>
            </nav>
        </div>
    </header>
    <div id="slider" class="slider-big">


        @if (@ViewBag.Title == "Home Page")
        {
            <h1>
                Juan Pablo Beltramino
            </h1>
        }
        else
        {
            <h1>
                @ViewBag.Title
            </h1>
           
        }


    </div>
<div class="container body-content">
    @RenderBody()
    <hr />

</div>
<footer id="footer">
    <div class="center">
        <p>&copy; @DateTime.Now.Year - Beltramino Juan Pablo</p>
    </div>
</footer>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
